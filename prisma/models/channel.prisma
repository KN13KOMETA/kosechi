model Channel {
  id    Int         @id @default(autoincrement())
  name  String
  color Int
  type  ChannelType

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  roles    Role[]
  users    User[]    @relation("AccesedChannels")
  messages Message[]

  // Categoty related
  channels   Channel[] @relation("ParentCategory")
  category   Channel?  @relation("ParentCategory", fields: [categoryId], references: [id])
  categoryId Int?
}

enum ChannelType {
  Category
  DMChannel
  GroupChannel
  PublicChannel
}
